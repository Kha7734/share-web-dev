<form action='' method='post'>
  <div class='card'>
    <h4 class='card-header'>
      Edit Category
    </h4>
    <div class='card-body'>
      <div class='form-group'>
        <label for='CatID'>
          CatId
        </label>
        <input
          type='text'
          name='CatID'
          class='form-control mt-2'
          value={{this.category.CatID}}
          readonly
        />
      </div>

      <div class='form-group'>
        <label for='CatName'>
          CatName
        </label>
        <input
          type='text'
          name='CatName'
          class='form-control mt-2'
          placeholder='Enter name'
          value={{this.category.CatName}}
          autofocus
        />
      </div>
    </div>
  </div>
  <div class='card-footer mt-3'>
    <a href='/admin/categories' class='btn btn-outline-success'>
      <i class='bi bi-arrow-return-left'></i>
      Return
    </a>
    <button
      type='submit'
      class='btn btn-danger'
      formaction='/admin/categories/del'
    >
      <i class='bi bi-trash-fill'></i>
      Delete
    </button>
    <button
      type='submit'
      class='btn btn-primary'
      formaction='/admin/categories/patch'
    >
      <i class='bi bi-check2'></i>
      Save
    </button>
  </div>
</form>